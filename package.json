{
  "name": "sewing-kit-next",
  "license": "MIT",
  "private": true,
  "scripts": {
    "run:ts": "babel-node --extensions .ts,.tsx,.mjs,.js,.json",
    "bootstrap:to-source": "babel-node --extensions .ts,.tsx,.mjs,.js,.json ./scripts/bootstrap",
    "bootstrap": "lerna bootstrap && yarn bootstrap:to-source && tsc --build",
    "sk:from-source": "babel-node --extensions .ts,.tsx,.mjs,.js -- ./packages/cli/src/cli",
    "sk": "yarn bootstrap:to-source && yarn sk:from-source",
    "sewing-kit": "yarn sk",
    "build": "yarn sk build",
    "test": "yarn sk test",
    "lint": "yarn sk lint && yarn lint:changelogs",
    "type-check": "yarn sk type-check",
    "check": "yarn lint && yarn test --no-watch && yarn type-check",
    "prerelease": "yarn build",
    "version-bump": "lerna version --no-push && yarn run lint:changelogs",
    "lint:changelogs": "yarn run:ts scripts/changelogs/lint.ts",
    "lint:changelogs:fix": "yarn run:ts scripts/changelogs/fix.ts",
    "release": "lerna publish && git push --tags",
    "dev:example": "yarn sk dev --root './example'",
    "tophat": "tophat",
    "generate:package": "plop package"
  },
  "workspaces": [
    "packages/*"
  ],
  "tophat": {
    "namespace": "@sewing-kit",
    "buildDirectory": "build"
  },
  "devDependencies": {
    "@babel/core": "^7.8.0",
    "@babel/node": "^7.8.7",
    "@shopify/tophat": "^0.0.5",
    "@types/fs-extra": "^9.0.0",
    "core-js": "^3.6.5",
    "eslint-find-rules": "^3.5.0",
    "execa": "^4.0.0",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "lerna": "^3.20.2",
    "plop": "^2.7.4",
    "tree-node-cli": "^1.3.0"
  },
  "dependencies": {},
  "resolutions": {
    "@types/vfile-message": "1.0.1"
  }
}
