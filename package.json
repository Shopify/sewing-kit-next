{
  "name": "sewing-kit-next",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap && babel-node --extensions .ts,.tsx,.mjs,.js ./scripts/bootstrap && tsc --build",
    "sk": "babel-node --extensions .ts,.tsx,.mjs,.js ./packages/cli/src/index",
    "sewing-kit": "yarn sk",
    "build": "yarn sk build",
    "test": "yarn sk test",
    "lint": "yarn sk lint",
    "type-check": "yarn sk type-check",
    "release": "lerna publish && git push --tags",
    "dev:example": "yarn sk dev --root './example'"
  },
  "workspaces": [
    "packages/*",
    "example/apps/*",
    "example/services/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/node": "^7.7.4",
    "@types/fs-extra": "^8.0.1",
    "eslint-plugin-shopify": "^33.0.0",
    "execa": "^3.4.0",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "lerna": "^3.19.0",
    "prettier": "^1.19.1",
    "tree-node-cli": "^1.2.5"
  },
  "dependencies": {
    "@shopify/useful-types": "^2.1.2",
    "core-js": "^3.4.4"
  }
}
